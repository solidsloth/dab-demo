{
  "$schema": "https://github.com/Azure/data-api-builder/releases/download/v0.9.7/dab.draft.schema.json",
  "data-source": {
    "database-type": "postgresql",
    "connection-string": "@env('DAB_DEMO_CONNECTION_STRING')",
    "options": {
      "set-session-context": false
    }
  },
  "runtime": {
    "rest": {
      "enabled": true,
      "path": "/api",
      "request-body-strict": true
    },
    "graphql": {
      "enabled": true,
      "path": "/graphql",
      "allow-introspection": true
    },
    "host": {
      "cors": {
        "origins": [],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "StaticWebApps"
      },
      "mode": "@env('DAB_ENV')"
    }
  },
  "entities": {
    "company": {
      "source": {
        "object": "company",
        "type": "table"
      },
      "graphql": {
        "enabled": true,
        "type": {
          "singular": "company",
          "plural": "companies"
        }
      },
      "rest": {
        "enabled": true,
        "path": "/companies"
      },
      "relationships": {
        "employees": {
          "target.entity": "employee",
          "cardinality": "many",
          "source.fields": ["id"],
          "target.fields": ["company_id"]
        }
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "create"
            },
            {
              "action": "read"
            },
            {
              "action": "update"
            },
            {
              "action": "delete"
            }
          ]
        }
      ]
    },
    "employee": {
      "source": {
        "object": "employee",
        "type": "table"
      },
      "graphql": {
        "enabled": true,
        "type": {
          "singular": "employee",
          "plural": "employees"
        }
      },
      "rest": {
        "enabled": true,
        "path": "/employees"
      },
      "relationships": {
        "company": {
          "target.entity": "company",
          "cardinality": "one",
          "source.fields": ["company_id"],
          "target.fields": ["id"]
        }
      },
      "mappings": {
        "company_id": "companyId"
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "create"
            },
            {
              "action": "read"
            },
            {
              "action": "update"
            },
            {
              "action": "delete"
            }
          ]
        }
      ]
    }
  }
}
